@{
    ViewBag.header = "Calculate Your IS413 Grade!";
}

@model Assignment1.Models.GradeCalcModel
<h3>Grade Calculator</h3>
<!-- This is the form for the grade calculator-->
<form method="post">
    <fieldset>
        <legend>Enter your percent out of 100 in each category</legend>
        <label for="assignments">Assignments: </label>
        <input type="number" id="assignments" asp-for="assignments" min="0" max="100" />
        <br />
        <label for="groupproj">Group Project: </label>
        <input type="number" id="groupproj" asp-for="groupproj" min="0" max="100" />
        <br />
        <label for="quizzes">Quizzes: </label>
        <input type="number" id="quizzes" asp-for="quizzes" min="0" max="100" />
        <br />
        <label for="exams">Exams: </label>
        <input type="number" id="exams" asp-for="exams" min="0" max="100" />
        <br />
        <label for="intex">Intex: </label>
        <input type="number" id="intex" asp-for="intex" min="0" max="100" />
        <br />
        <br />
        <input type="submit" id="submit" value="Submit" />
        <div asp-validation-summary="All"></div>
    </fieldset>
</form>